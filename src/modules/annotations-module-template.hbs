<div>
    <div>
        <input type="checkbox" id="{{activeCheckboxId}}"/>
        <label for="{{activeCheckboxId}}">Annotation mode</label>
    </div>
    <div id="controls">
        <div class="btn-group" id="drawControl">
            <button type="button" class="btn btn-default" id="draw">
              <span class="glyphicon glyphicon-pencil"></span>
            </button>
            <button type="button" class="btn btn-default" id="rectangle">
<!--               <span class="glyphicon glyphicon-unchecked"></span> -->
              <span class="glyphicon"><img src="{{imagesPrefix}}rectangle.svg" style="width:16px;height:16px;"></span>
              <span class="fa fa-mouse-pointer fa-lg"></span>
            </button>
            <button type="button" class="btn btn-default" id="circle">
              <span class="glyphicon"><img src="{{imagesPrefix}}circle.svg" style="width:16px;height:16px;"></span>
              <span class="fa fa-mouse-pointer fa-lg"></span>
            </button>
        </div>
        <input type="color" id="colorpicker" value="#000000"/>
<!--         <input type="number" id="lineWidth" value="1"/> -->
       
